<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hangu.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SocketReaderLog" />
        <activity android:name=".ServerAppActivity" />
        <activity android:name=".PersistWebAppActivity" />
        <activity android:name=".PersistHanguSocketActivity" />
        <activity android:name=".PersistServerAppActivity" />
        <activity android:name=".ListHanguSocketsActivity" />
        <activity android:name=".ListWebAppsActivity" />
        <activity android:name=".ListServerAppsActivity" />
        <activity android:name=".HanguSocketActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.socket.ReaderLog" />
        <service android:name=".service.socket.ExecutorScript" />
        <service android:name=".service.HttpConnector" />
        <service
            android:name=".JobSchedulerService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".service.WebAppCheck"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity android:name=".WebAppActivity" />
    </application>

</manifest>