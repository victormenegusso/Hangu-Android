<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_web_app_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hangu.android.WebAppActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:text="textView_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_url"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:text="textView_url" />

    <TextView
        android:text="textView_httpMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_httpMethod"
        android:layout_below="@+id/textView_url"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:text="textView_httpMethod" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_httpMethod"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_check"
        android:layout_alignParentEnd="true"
        tools:text="textView_check" />

    <Button
        android:text="button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_check"
        android:layout_alignParentStart="true"
        android:id="@+id/button_edit"
        android:layout_alignParentEnd="true"
        tools:text="button_edit"
        android:onClick="edit"/>

    <Button
        android:text="button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_edit"
        android:layout_alignParentStart="true"
        android:id="@+id/button_delete"
        android:layout_alignParentEnd="true"
        tools:text="button_delete"
        android:onClick="delete"/>
</RelativeLayout>
