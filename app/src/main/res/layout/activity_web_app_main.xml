<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_web_app_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="hangu.android.WebAppActivity">

    <TextView
        android:id="@+id/textView_name"
        tools:text="textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView_url"
        tools:text="textView_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|italic"/>

    <TextView
        android:id="@+id/textView_status"
        tools:text="textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|italic"/>

    <TextView
        android:text="@string/check_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="20dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/textView_check"
        tools:text="textView_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|italic"/>

    <TextView
        android:text="@string/http_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_httpMethod"
        tools:text="textView_httpMethod"

        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|italic"
        android:gravity="center"/>

</LinearLayout>
